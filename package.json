{
  "name": "wp-gutenberg-backgrounds",
  "version": "1.0.0",
  "description": "Add a background option to every Gutenberg block",
  "main": "assets/scripts/plugin.js",
  "scripts": {
    "dev": "NODE_ENV=development node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "watch": "NODE_ENV=development node_modules/webpack/bin/webpack.js --watch --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "hot": "NODE_ENV=development webpack-dev-server --inline --hot --config=node_modules/laravel-mix/setup/webpack.config.js",
    "production": "NODE_ENV=production node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "lint": "npm run -s lint:scripts && npm run -s lint:styles",
    "lint:scripts": "eslint src",
    "lint:styles": "stylelint src/**/*.{css,scss}",
    "test": "npm run -s lint && composer test",
    "precommit": "npm run test"
  },
  "browserslist": [
    "last 2 versions",
    "ie >= 11",
    "Android >= 4.4",
    "ios >= 8"
  ],
  "eslintConfig": {
    "root": true,
    "extends": [
      "plugin:genero/recommended",
      "plugin:genero/gutenberg"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-genero"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/generoi/wp-plugin-boilerplate.git"
  },
  "author": "Oskar Schöldström",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/generoi/wp-plugin-boilerplate/issues"
  },
  "homepage": "https://github.com/generoi/wp-plugin-boilerplate#readme",
  "engines": {
    "node": ">= 6.9.4"
  },
  "devDependencies": {
    "babel-preset-react": "^6.24.1",
    "eslint": "^4.19.0",
    "eslint-plugin-genero": "git+https://github.com/generoi/eslint-plugin-genero.git",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-react": "^7.10.0",
    "husky": "^0.14.3",
    "laravel-mix": "^2.1.11",
    "stylelint": "^9.3.0",
    "stylelint-config-genero": "git+https://github.com/generoi/stylelint-config-genero.git"
  },
  "dependencies": {
    "classnames": "^2.2.6"
  }
}
